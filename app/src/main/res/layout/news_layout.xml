<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/TopKoka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_top"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:text="Новости Grampus"
            android:textSize="18dp"
            android:translationZ="10dp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/BurgerMenu"
            android:layout_width="100px"
            android:layout_height="100px"
            android:elevation="11dp"
            android:src="@drawable/burger_menu"
            android:translationZ="11dp"
            app:layout_constraintEnd_toEndOf="@id/TopKoka"
            app:layout_constraintHorizontal_bias="0.05"
            android:layout_marginTop="12px"
            app:layout_constraintStart_toStartOf="@id/TopKoka"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="296dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <!-- Пост -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/post_background"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <!-- Картинка -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/post0" />

                    <!-- Заголовок -->
                    <TextView
                        android:id="@+id/hyper1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Как сделать сайт быстро, без смс и регистрации"
                        android:stateListAnimator="@null"
                        app:backgroundTint="@null"
                        android:textColor="@color/orange"
                        android:textSize="18sp" />

                    <!-- Текст поста -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Шокирующий секрет: Создайте свой сайт моментально без лишних хлопот и ограничений!"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- Пост -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/post_background"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <!-- Картинка -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/grampus" />

                    <!-- Заголовок -->
                    <TextView
                        android:id="@+id/hyper2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="О Грампусе"
                        android:textColor="@color/orange"
                        android:textSize="18sp" />

                    <!-- Текст поста -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Узнайте о нашей компании! Чем мы занимаемся?"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- Пост -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/post_background"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <!-- Картинка -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/post3" />

                    <!-- Заголовок -->
                    <TextView
                        android:id="@+id/hyper3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Возможно ли сделать адаптивный сайт под любые устройства?"
                        android:textColor="@color/orange"
                        android:textSize="18sp" />

                    <!-- Текст поста -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Разбираем популярный миф про адаптивные сайты или почему в Grampus никто этим не занимается"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- Пост -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/post_background"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <!-- Картинка -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/post4" />

                    <!-- Заголовок -->
                    <TextView
                        android:id="@+id/hyper4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Встреча с представителями ВКСиИТ"
                        android:textColor="@color/orange"
                        android:textSize="18sp" />

                    <!-- Текст поста -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Кто эти люди и почему нам выгодно брать их студентов на практику"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- Пост -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/post_background"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <!-- Картинка -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/post5" />

                    <!-- Заголовок -->
                    <TextView
                        android:id="@+id/hyper5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Подписывайтесь на наш паблик ВКонтакте"
                        android:textColor="@color/orange"
                        android:textSize="18sp" />

                    <!-- Текст поста -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="В нашем сообществе вы можете найти ещё больше новостей о нашей компании"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="©️ Кузнецов Т.Е., Grampus App v1.0, 2023" />
                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <Button
            android:id="@+id/burger1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Новости"
            android:textColor="@color/black"
            android:background="@color/white"
            app:backgroundTint="@null"
            />

        <Button
            android:id="@+id/burger2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Подать резюме"
            android:textColor="@color/black"
            android:background="@color/white"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/burger4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Заявка на сайт"
            android:textColor="@color/black"
            android:background="@color/white"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/burger3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="О приложении"
            android:textColor="@color/black"
            android:background="@color/white"
            app:backgroundTint="@null" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>