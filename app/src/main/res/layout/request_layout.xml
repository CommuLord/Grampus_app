<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/TopKoka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_top"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:text="Заявка на сайт"
            android:textSize="18dp"
            android:translationZ="10dp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/BurgerMenu"
            android:layout_width="100px"
            android:layout_height="100px"
            android:elevation="11dp"
            android:src="@drawable/burger_menu"
            android:translationZ="11dp"
            app:layout_constraintEnd_toEndOf="@id/TopKoka"
            app:layout_constraintHorizontal_bias="0.05"
            android:layout_marginTop="12px"
            app:layout_constraintStart_toStartOf="@id/TopKoka"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/post_background"
                    android:orientation="vertical"
                    android:padding="25dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/map1" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="СОЗДАНИЕ САЙТОВ"
                        android:textColor="@color/orange"
                        android:gravity="center"
                        android:textSize="18sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Типовые проекты:"
                        android:textColor="@color/orange"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Сайт-визитка (от 7 000 руб.)"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Корпоративный сайт (от 15 000 руб.)"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Сайт-каталог (от 15 000 руб.)"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Интернет-магазин (от 17 000 руб.)"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/PodButton1"
                        android:layout_width="400px"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_button"
                        android:stateListAnimator="@null"
                        android:text="Подробнее"
                        android:textSize="18dp"
                        app:backgroundTint="@null"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/post_background"
                    android:orientation="vertical"
                    android:padding="25dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Уникальная разработка:"
                        android:textColor="@color/orange"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Landing Page (Одностраничный сайт)"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Корпоративный сайт"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Сайт-каталог"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Интернет-магазин"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Сайт на иностранном языке"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Сайт гос.органа"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Сайт на несколько регионов"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/PodButton2"
                        android:layout_width="400px"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_button"
                        android:stateListAnimator="@null"
                        android:text="Подробнее"
                        android:textSize="18dp"
                        app:backgroundTint="@null"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/burger1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Новости"
            android:textColor="@color/black"
            android:background="@color/white"
            app:backgroundTint="@null"
            />

        <Button
            android:id="@+id/burger2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Подать резюме"
            android:textColor="@color/black"
            android:background="@color/white"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/burger4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Заявка на сайт"
            android:textColor="@color/black"
            android:background="@color/white"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/burger3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="О приложении"
            android:textColor="@color/black"
            android:background="@color/white"
            app:backgroundTint="@null" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>